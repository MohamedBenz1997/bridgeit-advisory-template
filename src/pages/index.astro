---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Bridgeit Advisory | ${SITE_TITLE}`}
			description="Bridging research and ideas into real AI products."
		/>
	</head>

	<body>
		<Header />

		<main class="deck">
			<!-- SLIDE 1 (photo only here) -->
			<section class="slide hero" aria-label="Bridgeit Advisory">
				<div class="heroOverlay" aria-hidden="true"></div>

				<div class="inner heroInner">
					<div class="brandRow">
						<span class="logo" aria-hidden="true" title="Bridgeit mark">
							<!-- simple consulting-style mark: arch + base -->
							<svg width="22" height="22" viewBox="0 0 24 24" fill="none">
								<path d="M6 18V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
								<path d="M18 18V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
								<path d="M7 13c2.7-3.6 6.3-3.6 10 0" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
								<path d="M6 18h12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
							</svg>
						</span>
						<span class="brandName">Bridgeit Advisory</span>
					</div>

					<h1>Bridgeit Advisory</h1>
					<p class="tagline">Bridging research and ideas into real AI products</p>

					<div class="actions">
						<a class="btn primary" href="#contact">Contact</a>
						<a class="btn ghost" href="#what">What We Do</a>
					</div>
				</div>
			</section>

			<!-- SLIDE 2 -->
			<section class="slide s2" id="what" aria-label="What We Do">
				<div class="inner">
					<h2>What We Do</h2>
					<p class="lead">Bridgeit provides strategic, founder-led AI and research-to-product advisory.</p>
					<p>
						We help founders, freelancers, and researchers turn complex ideas, research, and early demos into credible AI products
						and industry-ready systems.
					</p>
					<p class="muted">Our focus is clarity, direction, and decision-making, not outsourced execution.</p>
				</div>
			</section>

			<!-- SLIDE 3 -->
			<section class="slide s3" aria-label="How We Help">
				<div class="inner">
					<h2>How We Help</h2>
					<p class="lead">We work with clients on:</p>
					<ul class="bullets">
						<li>Translating research or ideas into concrete product directions</li>
						<li>Applied AI architecture and system-level decisions</li>
						<li>MVP scoping: what to build, validate, or discard</li>
						<li>Reviewing demos, experiments, and early prototypes</li>
						<li>Identifying technical, data, and evaluation risks early</li>
					</ul>
					<p class="muted">The goal is to avoid building the wrong thing and move faster with confidence.</p>
				</div>
			</section>

			<!-- SLIDE 4 -->
			<section class="slide s4" aria-label="How We Work">
				<div class="inner">
					<h2>How We Work</h2>
					<p class="lead">
						We start with an exploratory conversation to understand context, goals, and constraints.
					</p>
					<p>
						For teams that find value, we continue through hourly strategic advisory, delivered via:
					</p>
					<ul class="bullets">
						<li>live discussions</li>
						<li>async review of documents, designs, experiments, or prototypes</li>
					</ul>
					<p class="muted">Work is founder-led and intentionally limited to ensure depth and quality.</p>
				</div>
			</section>

			<!-- SLIDE 5 -->
			<section class="slide s5" aria-label="Who We Work With">
				<div class="inner">
					<h2>Who We Work With</h2>

					<div class="twoCol">
						<div class="card">
							<h3>We work with</h3>
							<ul class="bullets compact">
								<li>Startup founders building AI-driven products</li>
								<li>Freelancers and independent builders</li>
								<li>PhDs, postdocs, and MScs transitioning to industry</li>
								<li>Research-driven teams validating applied directions</li>
							</ul>
						</div>

						<div class="card">
							<h3>We do not work with</h3>
							<ul class="bullets compact">
								<li>Large enterprises</li>
								<li>Outsourced implementation projects</li>
								<li>Teams looking for full development or delivery</li>
							</ul>
						</div>
					</div>
				</div>
			</section>

			<!-- SLIDE 6 -->
			<section class="slide s6" id="contact" aria-label="Contact">
				<div class="inner">
					<h2>Contact</h2>
					<p class="lead">Exploratory conversations are available by referral or direct outreach.</p>

					<p class="emailLine">
						üìß <a href="mailto:contact@bridgeitadvisory.com">contact@bridgeitadvisory.com</a>
					</p>

					<form class="form" method="POST" action="https://formspree.io/f/REPLACE_ME">
						<div class="row">
							<label>
								Name
								<input name="name" type="text" autocomplete="name" required />
							</label>
							<label>
								Email
								<input name="email" type="email" autocomplete="email" required />
							</label>
						</div>

						<label>
							Message
							<textarea name="message" rows="7" required></textarea>
						</label>

						<div class="actions">
							<button class="btn primary" type="submit">Send</button>
							<a class="btn ghost" href="mailto:contact@bridgeitadvisory.com">Email instead</a>
						</div>
					</form>
				</div>
			</section>
		</main>

		<Footer />

		<style>
			:global(html) { scroll-behavior: smooth; }
			:global(body) {
				margin: 0;
				overflow: hidden; /* Only the deck scrolls */
				background: #0b0f17;
				color: #eaf0ff;
			}

			/* Deck scroll container */
			.deck {
				height: 100vh;
				width: 100vw;
				overflow-y: auto;
				scroll-snap-type: y mandatory;
				scroll-snap-stop: always;
				-webkit-overflow-scrolling: touch;
			}

			/* Full-screen slides, full-bleed horizontally */
			.slide {
				min-height: 100vh;
				width: 100vw;
				scroll-snap-align: start;
				position: relative;
				display: grid;
				align-items: center;
				padding: clamp(28px, 5vw, 86px);
			}

			/* Wider inner content to kill ‚Äúbook page‚Äù feeling */
			.inner {
				width: 100%;
				max-width: 1280px;
				margin: 0 auto;
			}

			/* HERO slide */
			.hero {
				background-image: url('/hero-bridge.jpg');
				background-size: cover;
				background-position: center;
				color: #f6f8ff;
			}
			.heroOverlay {
				position: absolute;
				inset: 0;
				background:
					linear-gradient(90deg, rgba(6,10,18,0.55) 0%, rgba(6,10,18,0.68) 38%, rgba(6,10,18,0.82) 70%, rgba(6,10,18,0.90) 100%),
					radial-gradient(900px 520px at 18% 25%, rgba(255,214,160,0.30), transparent 60%),
					linear-gradient(180deg, rgba(6,10,18,0.25) 0%, rgba(6,10,18,0.65) 70%, rgba(6,10,18,0.80) 100%);
				pointer-events: none;
			}
			.heroInner { position: relative; }

			.brandRow {
				display: inline-flex;
				align-items: center;
				gap: 12px;
				margin-bottom: 18px;
			}
			.logo {
				display: inline-flex;
				width: 46px;
				height: 46px;
				align-items: center;
				justify-content: center;
				border-radius: 14px;
				background: rgba(255, 255, 255, 0.12);
				border: 1px solid rgba(255, 255, 255, 0.22);
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
			}
			.brandName {
				font-size: 13px;
				letter-spacing: 0.14em;
				text-transform: uppercase;
				opacity: 0.95;
			}

			/* Typography */
			h1 {
				font-size: clamp(46px, 6vw, 84px);
				line-height: 1.02;
				letter-spacing: -0.035em;
				margin: 0 0 14px;
				max-width: 18ch;
				text-shadow: 0 14px 40px rgba(0,0,0,0.45);
			}
			.tagline {
				font-size: clamp(18px, 2.2vw, 26px);
				margin: 0 0 22px;
				opacity: 0.98;
				max-width: 62ch;
				text-shadow: 0 10px 28px rgba(0,0,0,0.35);
			}

			h2 {
				font-size: clamp(26px, 3vw, 38px);
				letter-spacing: -0.02em;
				margin: 0 0 14px;
			}
			h3 {
				font-size: 12px;
				letter-spacing: 0.14em;
				text-transform: uppercase;
				margin: 0 0 12px;
				opacity: 0.78;
			}

			p { margin: 0 0 14px; }
			.lead { font-size: 18px; opacity: 0.92; max-width: 90ch; }
			.muted { opacity: 0.78; max-width: 92ch; }
			a { color: inherit; text-underline-offset: 4px; }

			/* Buttons */
			.actions {
				display: flex;
				gap: 12px;
				flex-wrap: wrap;
				margin-top: 18px;
			}
			.btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				padding: 12px 16px;
				border-radius: 999px;
				font-size: 14px;
				text-decoration: none;
				border: 1px solid rgba(255,255,255,0.18);
				background: rgba(255,255,255,0.08);
				color: inherit;
				cursor: pointer;
				transition: transform 0.10s ease, background 0.16s ease, border-color 0.16s ease;
			}
			.btn:hover { transform: translateY(-1px); background: rgba(255,255,255,0.12); }
			.btn:active { transform: translateY(0px); }

			.primary {
				background: rgba(255, 214, 160, 0.18);
				border-color: rgba(255, 214, 160, 0.42);
			}
			.primary:hover {
				background: rgba(255, 214, 160, 0.24);
				border-color: rgba(255, 214, 160, 0.55);
			}
			.ghost { background: rgba(255,255,255,0.06); }

			/* Lists */
			.bullets { margin: 10px 0 14px; padding-left: 18px; max-width: 92ch; }
			.bullets li { margin: 10px 0; }
			.bullets.compact li { margin: 8px 0; }

			/* Slide backgrounds (NO PHOTO after slide 1) */
			.s2 {
				color: #0c1220;
				background:
					radial-gradient(1100px 700px at 18% 20%, rgba(255,214,160,0.35), transparent 55%),
					linear-gradient(180deg, #f6f7fb 0%, #eef1f9 100%);
			}
			.s3 {
				background:
					radial-gradient(900px 520px at 20% 15%, rgba(255,214,160,0.14), transparent 60%),
					linear-gradient(180deg, #0b1020 0%, #070a14 100%);
			}
			.s4 {
				background:
					radial-gradient(900px 520px at 20% 10%, rgba(255,214,160,0.10), transparent 60%),
					linear-gradient(180deg, #0a0d12 0%, #06070b 100%);
			}
			.s4::after {
				content: "";
				position: absolute;
				inset: 0;
				background-image:
					linear-gradient(rgba(255,255,255,0.04) 1px, transparent 1px),
					linear-gradient(90deg, rgba(255,255,255,0.04) 1px, transparent 1px);
				background-size: 44px 44px;
				opacity: 0.18;
				pointer-events: none;
			}
			.s5 {
				background:
					radial-gradient(1000px 620px at 18% 18%, rgba(255,214,160,0.16), transparent 55%),
					linear-gradient(180deg, #0f141b 0%, #0a0d12 100%);
			}
			.s6 {
				background:
					radial-gradient(1100px 700px at 18% 20%, rgba(255,214,160,0.18), transparent 55%),
					linear-gradient(180deg, #0b1020 0%, #070a14 100%);
			}

			/* Who cards */
			.twoCol {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 16px;
				margin-top: 18px;
			}
			.card {
				border: 1px solid rgba(255,255,255,0.12);
				background: rgba(255,255,255,0.04);
				border-radius: 20px;
				padding: 18px;
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
			}
			.s2 .card {
				border-color: rgba(12,18,32,0.12);
				background: rgba(255,255,255,0.70);
			}
			.s2 h2, .s2 h3, .s2 p, .s2 li, .s2 a { color: #0c1220; }

			/* Contact form */
			.emailLine { margin: 8px 0 16px; }

			.form {
				margin-top: 18px;
				max-width: 1000px;
				padding-top: 16px;
				border-top: 1px solid rgba(255,255,255,0.12);
			}
			.row { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
			label {
				display: grid;
				gap: 8px;
				font-size: 13px;
				opacity: 0.86;
				margin-bottom: 12px;
			}
			input, textarea {
				width: 100%;
				padding: 12px 14px;
				border-radius: 14px;
				border: 1px solid rgba(255,255,255,0.16);
				background: rgba(0,0,0,0.22);
				color: #eaf0ff;
				outline: none;
			}
			input:focus, textarea:focus {
				border-color: rgba(255, 214, 160, 0.55);
				box-shadow: 0 0 0 4px rgba(255, 214, 160, 0.18);
			}

			@media (max-width: 980px) {
				.twoCol { grid-template-columns: 1fr; }
				.row { grid-template-columns: 1fr; }
			}

			@media (prefers-reduced-motion: reduce) {
				:global(html) { scroll-behavior: auto; }
				.btn { transition: none; }
			}
		</style>
	</body>
</html>
