---
const nav = [
  { label: "Contact", href: "/#contact" },
];
---

<header class="wrap">
  <div class="bar">
    <a class="brand" href="/">Bridgeit Advisory</a>

    <nav class="nav" aria-label="Primary">
      {nav.map((item) => (
        <a class="link" href={item.href}>{item.label}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  .wrap {
    position: sticky;
    top: 0;
    z-index: 10;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0,0,0,0.06);
  }
  .bar {
    max-width: 980px;
    margin: 0 auto;
    padding: 14px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .brand {
    font-weight: 700;
    letter-spacing: -0.01em;
    text-decoration: none;
    color: inherit;
  }
  .nav {
    display: flex;
    gap: 14px;
    align-items: center;
  }
  .link {
    text-decoration: none;
    color: inherit;
    opacity: 0.8;
    font-size: 14px;
  }
  .link:hover {
    opacity: 1;
    text-decoration: underline;
    text-underline-offset: 4px;
  }
</style>
